{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "rewrites": [{
                "source": "/",
                "destination": "/index.html"
            },
            {
                "source": "/login",
                "destination": "/login.html"
            },
            {
                "source": "/register",
                "destination": "/register.html"
            },
            {
                "source": "/checkout",
                "destination": "/checkout.html"
            },
            {
                "source": "/404",
                "destination": "/404.html"
            },
            {
                "source": "/404",
                "destination": "/404.html"
            },
            {
                "source": "/contact",
                "destination": "/contact.html"
            }

        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "remoteconfig": {
        "template": "remoteconfig.template.json"
    }
}